{
    "manifest_version": 2,
    "name": "Animated Click",
    "description": "This extension shows animation on each click",
    "homepage_url": "https://github.com/22nds/animated-click",
    "version": "1.0",

    "browser_action": {
        "default_icon": "img/icon96px.png",
        "default_title": "Animated Click"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }],
    "permissions": [
        "activeTab",
        "tabs"
    ]
}
